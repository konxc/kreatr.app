{
  "name": "kreatr-app",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered Social Media Lab untuk kreator konten",
  "author": "kreatr.app team",
  "license": "MIT",
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:push": "cd packages/database && bunx prisma db push",
    "db:migrate": "cd packages/database && bunx prisma migrate dev",
    "db:studio": "cd packages/database && bunx prisma studio",
    "db:seed": "cd packages/database && bun run seed",
    "commit:dev0:latest": "node scripts/utils/commit-manager.js latest dev0",
    "commit:dev0:list": "node scripts/utils/commit-manager.js list dev0",
    "commit:dev0:run": "node scripts/utils/commit-manager.js run dev0",
    "commit:dev1:latest": "node scripts/utils/commit-manager.js latest dev1",
    "commit:dev1:list": "node scripts/utils/commit-manager.js list dev1",
    "commit:dev1:run": "node scripts/utils/commit-manager.js run dev1",
    "commit:migrate": "node scripts/utils/commit-manager.js migrate dev0",
    "commit:create": "node scripts/utils/commit-manager.js create",
    "commit:help": "node scripts/utils/commit-manager.js help"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
